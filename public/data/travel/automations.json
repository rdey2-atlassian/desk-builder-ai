[
  {
    "id": "auto_route",
    "if": "type=new_trip",
    "then": "assign:Travel Desk"
  },
  {
    "id": "mgr_approval",
    "if": "class=Business OR budget>150000",
    "then": "request_manager_approval"
  },
  {
    "id": "deadline_escalate",
    "if": "departure_in_hours<48",
    "then": "priority=P1; notify:#travel-hotline"
  },
  {
    "id": "p1_paging",
    "if": "type=emergency",
    "then": "notify_oncall:#travel-hotline"
  },
  {
    "id": "attach_policy",
    "if": "type in [new_trip, change_cancel]",
    "then": "attach_kb:policy_class_by_level"
  }
]
